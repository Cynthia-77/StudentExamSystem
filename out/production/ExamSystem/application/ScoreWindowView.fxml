<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.ScoreWindowController"
            prefHeight="420.0" prefWidth="700.0">
    <children>
        <VBox layoutX="30.0" layoutY="25.0" prefHeight="420.0" prefWidth="700.0" spacing="60">
            <children>
                <HBox minHeight="20.0" prefHeight="37.0" prefWidth="700.0" spacing="110">
                    <children>
                        <Label fx:id="accountInfo" text="">
                            <font>
                                <Font size="17.0"/>
                            </font>
                        </Label>
                        <Label fx:id="nameInfo" text="">
                            <font>
                                <Font size="17.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <VBox prefHeight="100.0" prefWidth="600.0" spacing="30.0">
                    <children>
                        <Label fx:id="scoreInfo" text="">
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Label>
                        <Label fx:id="rankInfo" text="">
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0"/>
                    </VBox.margin>
                </VBox>
                <HBox prefHeight="280" prefWidth="670" alignment="BOTTOM_RIGHT">
                    <children>
                        <Button id="btn_back" mnemonicParsing="false" text="返回" onAction="#Back" prefWidth="60.0">
                            <font>
                                <Font size="15.0"/>
                            </font>
                            <effect>
                                <DropShadow/>
                            </effect>
                            <HBox.margin>
                                <Insets right="30" bottom="30"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>