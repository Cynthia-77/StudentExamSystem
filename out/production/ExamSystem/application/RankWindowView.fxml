<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="618.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.RankWindowController">
    <VBox layoutX="0.0" layoutY="0.0" prefHeight="618.0" prefWidth="900.0" spacing="60" alignment="TOP_CENTER">
        <children>
            <GridPane alignment="TOP_CENTER" hgap="10.0" vgap="10.0"
                      stylesheets="@../css/RankWindowViewCss.css">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <children>
                    <Label text="排行榜" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER">
                        <font>
                            <Font size="25"/>
                        </font>
                    </Label>
                    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <columns>
                            <TableColumn fx:id="colRank" text="排名" maxWidth="260.0" minWidth="60.0" prefWidth="140.0"/>
                            <TableColumn fx:id="colAccount" text="学号" maxWidth="260.0" minWidth="60.0"
                                         prefWidth="140.0"/>
                            <TableColumn fx:id="colScore" text="成绩" maxWidth="260.0" minWidth="60.0" prefWidth="140.0"/>
                        </columns>
                    </TableView>
                </children>
            </GridPane>
            <HBox prefHeight="100" prefWidth="900" alignment="BOTTOM_RIGHT">
                <children>
                    <Button id="btn_back" mnemonicParsing="false" text="返回" onAction="#Back" prefWidth="60.0">
                        <font>
                            <Font size="15.0"/>
                        </font>
                        <effect>
                            <DropShadow/>
                        </effect>
                        <HBox.margin>
                            <Insets right="30" bottom="30"/>
                        </HBox.margin>
                    </Button>
                </children>
            </HBox>
        </children>
    </VBox>
</AnchorPane>
