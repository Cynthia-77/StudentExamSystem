<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="420.0" prefWidth="700.0"
            xmlns:fx="http://javafx.com/fxml" fx:controller="application.MainWindowController">
    <children>
        <HBox layoutX="30.0" layoutY="15.0" minHeight="20.0" prefHeight="37.0" prefWidth="670.0" spacing="220">
            <children>
                <Label fx:id="accountInfo" text="">
                    <font>
                        <Font size="17.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="0.0" top="10.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="nameInfo" text="">
                    <font>
                        <Font size="17.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="-110.0" top="10.0"/>
                    </HBox.margin>
                </Label>
                <Button id="btn_out" mnemonicParsing="false" text="退出" onAction="#Out" prefWidth="50.0">
                    <font>
                        <Font size="12.0"/>
                    </font>
                    <effect>
                        <DropShadow/>
                    </effect>
                    <HBox.margin>
                        <Insets left="200" top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <VBox layoutX="60.0" layoutY="100.0" prefHeight="360.0" prefWidth="670.0" spacing="30.0">
            <children>
                <Hyperlink text="开始考试" onAction="#StartExam">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Hyperlink>
                <Hyperlink text="查询成绩" onAction="#CheckScore">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Hyperlink>
                <Hyperlink text="查看排行榜" onAction="#ShowRank">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Hyperlink>
            </children>
        </VBox>
    </children>
</AnchorPane>